<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link href="/bootstrap/icons/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="AdvanceBlazorSelectListSample.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <Routes @rendermode="InteractiveServer" />
    <script src="_framework/blazor.web.js"></script>

    <script>
        window.outsideClickHandler = {
            addEvent: function (elementId, dotnetHelper) {
                window.addEventListener("click", (e) => {
                    if (!document.getElementById(elementId).contains(e.target)) {
                        dotnetHelper.invokeMethodAsync("InvokeClickOutside");
                    }
                });
            }
        };
    </script>
</body>

</html>
